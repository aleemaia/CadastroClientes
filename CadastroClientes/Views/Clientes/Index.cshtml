@model IEnumerable<ClientesModel>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Clientes</h1>
        <div>
            <a class="btn btn-success mx-2" asp-controller="Clientes" asp-action="Exportar"><i class="bi bi-file-earmark-plus"></i>Exportar</a>
            <a class="btn btn-success mx-2" asp-controller="Clientes" asp-action="Cadastrar"><i class="bi bi-file-earmark-plus"></i>Cadastrar um novo cliente</a>
        </div>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Nascimento</th>
                <th scope="col">Telefone</th>
                <th scope="col">CPF</th>
                <th scope="col">Email</th>
                <th scope="col">Rua</th>
                <th scope="col">Bairro</th>
                <th scope="col">Cidade</th>
                <th scope="col">Estado</th>
                <th scope="col">CEP</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {

                @foreach (var cliente in Model)
                {
                    <tr>
                        <th scope="row">@cliente.Nome</th>
                        <td>@cliente.Nascimento</td>
                        <td>@cliente.Telefone</td>
                        <td>@cliente.CPF</td>
                        <td>@cliente.Email</td>
                        <td>@cliente.Rua</td>
                        <td>@cliente.Bairro</td>
                        <td>@cliente.Cidade</td>
                        <td>@cliente.Estado</td>
                        <td>@cliente.CEP</td>
                        <td>
                            <a asp-controller="Clientes" asp-action="Editar" asp-route-id="@cliente.Id" class="btn btn-warning mx-2">Editar</a>
                            <a asp-controller="Clientes" asp-action="Excluir" asp-route-id="@cliente.Id" class="btn btn-danger mx-2">Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>