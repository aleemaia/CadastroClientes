@model ClientesModel
@{
    ViewData["Title"] = "Excluir Cliente";
}

<div class="container bg-dark p-5 rounded-5">
    <div class="mb-5 text-center">
        <h1 class="text-light">Excluir Cliente</h1>
    </div>
    <form method="post" asp-controller="Clientes" asp-action="Excluir">
        <input type="hidden" asp-for="Id" />
        <h2 class="text-light">Tem certeza que deseja excluir registro abaixo?</h2>
        <div class="mb-3">
            <label for="Nome" class="form-label text-light">Nome</label>
            <input type="text" class="form-control" asp-for="Nome" id="Nome" placeholder="Nome Completo" disabled>
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>
        <div class="mb-3">
            <label for="Nascimento" class="form-label text-light">Nascimento</label>
            <input type="date" class="form-control" asp-for="Nascimento" id="Nascimento" placeholder="Data de Nascimento" disabled>
            <span class="text-danger" asp-validation-for="Nascimento"></span>
        </div>
        <div class="mb-3">
            <label for="Telefone" class="form-label text-light">Telefone</label>
            <input type="tel" class="form-control" asp-for="Telefone" id="Telefone" disabled>
            <span class="text-danger" asp-validation-for="Telefone"></span>
        </div>
        <div class="mb-3">
            <label for="CPF" class="form-label text-light">CPF</label>
            <input type="text" pattern="\d{3}\.?\d{3}\.?\d{3}-?\d{2}" class=" form-control" asp-for="CPF" id="CPF" disabled>
            <span class="text-danger" asp-validation-for="CPF"></span>
        </div>
        <div class="mb-3">
            <label for="Email" class="form-label text-light">Email</label>
            <input type="email" class="form-control" asp-for="Email" id="Email" placeholder="exemplo@email.com" disabled>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="mb-3">
            <label for="Rua" class="form-label text-light">Rua</label>
            <input type="text" class="form-control" asp-for="Rua" id="Rua" disabled>
            <span class="text-danger" asp-validation-for="Rua"></span>
        </div>
        <div class="mb-3">
            <label for="Bairro" class="form-label text-light">Bairro</label>
            <input type="text" class="form-control" asp-for="Bairro" id="Bairro" disabled>
            <span class="text-danger" asp-validation-for="Bairro"></span>
        </div>
        <div class="mb-3">
            <label for="Cidade" class="form-label text-light">Cidade</label>
            <input type="text" class="form-control" asp-for="Cidade" id="Cidade" disabled>
            <span class="text-danger" asp-validation-for="Cidade"></span>
        </div>
        <div class="mb-3">
            <label for="Estado" class="form-label text-light">Estado</label>
            <input type="text" class="form-control" asp-for="Estado" id="Estado" disabled>
            <span class="text-danger" asp-validation-for="Estado"></span>
        </div>
        <div class="mb-3">
            <label for="CEP" class="form-label text-light">CEP</label>
            <input type="text" pattern="\d{5}-?\d{3}" class=" form-control" asp-for="CEP" id="CEP" disabled>
            <span class="text-danger" asp-validation-for="CEP"></span>
        </div>
        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50">Excluir</button>
            <a class="btn btn-primary w-50" asp-controller="Clientes" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>