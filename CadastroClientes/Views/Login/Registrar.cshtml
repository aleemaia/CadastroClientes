@using CadastroClientes.Dto
@model UsuarioRegisterDto

@{
    Layout = "_LayoutDeslogada";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-light" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemError"] != null)
{
    <div class="alert alert-danger text-light" role="alert">
        @TempData["MensagemError"]
    </div>
}

<div asp-validation-summary="All" class="text-danger"></div>

<div class="container">
    <h1>Cadastro de Usuários</h1>
    <form asp-action="Registrar" asp-controller="Login" method="post">
        <div class="mb-3">
            <label for="Nome" class="form-label">Nome:</label>
            <input type="text" class="form-control" id="Nome" asp-for="Nome">
        </div>
        <div class="mb-3">
            <label for="Sobrenome" class="form-label">Sobrenome:</label>
            <input type="text" class="form-control" id="Sobrenome" asp-for="Sobrenome">
        </div>
        <div class="mb-3">
            <label for="Email" class="form-label">Email:</label>
            <input type="email" class="form-control" id="Email" asp-for="Email">
        </div>
        <div class="mb-3">
            <label for="Senha" class="form-label">Senha:</label>
            <input type="password" class="form-control" id="Senha" asp-for="Senha">
        </div>
        <div class="mb-3">
            <label for="Senha" class="form-label">Confirmar Senha:</label>
            <input type="password" class="form-control" id="Senha" asp-for="ConfirmarSenha">
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary w-25 mx-2">Cadastrar</button>
            <a asp-action="Login" asp-controller="Login" class="btn w-25">Voltar</a>
        </div>
    </form>
</div>
